<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
        <item name="android:windowBackground">@drawable/bg_gradient_red</item>
    </style>

    <style name="WhiteAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--        <item name="android:fontFamily">@font/bold</item>-->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorGrey</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="SheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorDarkYellow</item>
        <item name="colorControlActivated">@color/colorLightGray</item>
    </style>
    <style name="TextView_MyInfo">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>